<%= render 'shared/header', title: 'Create a New Status' %>


<div class="col-sm-6">
  <%= render 'shared/error', obj: @status %>
  <%= form_for @status, html: {role: 'form'} do |f| %>
    <div class='form-group'>
      <%= f.label :body, class: 'sr-only' %>
      <br/>
      <%= f.text_area :body, rows: 4, placeholder: 'Type your status here', class: 'form-control' %>
      </br>
      <%= f.submit 'Create Status', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>