<% if obj.errors.any? %>
  <div class="panel panel-danger">
    <div class="panel-heading">There were some errors</div>
    <div class="panel-body text-danger">
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>